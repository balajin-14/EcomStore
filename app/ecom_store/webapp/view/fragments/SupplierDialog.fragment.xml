<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="supplierDialog"
        title="Add Supplier"
        class="sapUiResponsivePadding"
        contentWidth="400px"
    >
        <VBox class="sapUiSmallMargin">

            <Label text="Supplier Name" required="true" />
            <Input
                value="{supplierForm>/name}"
                required="true"
            />

            <Label
                text="Contact Number"
                class="sapUiSmallMarginTop"
            />
            <Input
                value="{supplierForm>/contactNo}"
                type="Tel"
            />

            <Label
                text="Email"
                class="sapUiSmallMarginTop"
            />
            <Input
                value="{supplierForm>/email}"
                type="Email"
            />

        </VBox>

        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press=".onSaveSupplier"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press=".onCloseSupplierDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
